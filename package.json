{
  "name": "sermat",
  "description": "Sermat is a serialization format, similar to JSON.",
  "keywords": [
    "data format",
    "marshalling",
    "serialization"
  ],
  "version": "0.1.1",
  "author": {
    "name": "Leonardo Val",
    "email": "leonardo.val@creatartis.com"
  },
  "homepage": "http://creatartis.com",
  "contributors": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/LeonardoVal/sermat.js"
  },
  "main": "dist/sermat.js",
  "files": [
    "dist",
    "LICENSE.md"
  ],
  "dependencies": {},
  "devDependencies": {
    "@creatartis/creatartis-build": "^0.2.1"
  },
  "scripts": {
    "lint": "npx creatartis-build lint",
    "build": "npx creatartis-build lint build test",
    "test": "npx creatartis-build test",
    "publish:verdaccio": "npm run build && npx creatartis-build publish:verdaccio",
    "republish:verdaccio": "npm run build && npx creatartis-build republish:verdaccio"
  },
  "babel": {
    "extends": "./node_modules/@creatartis/creatartis-build/dist/babel-config.js"
  },
  "eslintConfig": {
    "extends": "./node_modules/@creatartis/creatartis-build/dist/eslint-config.js",
    "rules": {
      "no-useless-constructor": 0,
      "class-methods-use-this": 0,
      "no-underscore-dangle": 0,
      "no-param-reassign": 0,
      "no-restricted-syntax": 0,
      "no-use-before-define": 0,
      "guard-for-in": 0,
      "object-curly-newline": 0
    }
  },
  "eslintIgnore": [
    "dist/",
    "node_modules/"
  ]
}
